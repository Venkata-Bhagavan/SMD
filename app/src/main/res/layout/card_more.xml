<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:layout_height="wrap_content">


        <TextView
            android:id="@+id/more"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:paddingLeft="5dp"
            android:paddingTop="5dp"
            android:paddingRight="5dp"
            android:text="More"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <androidx.cardview.widget.CardView
            style="@style/myCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <!-- First row -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >

                    <Button
                        android:id="@+id/settings"
                        style="@style/Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"

                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_settings_24"
                        android:text="Settings"
                        app:icon="@drawable/icon_settings_24" />

                    <Button
                        android:id="@+id/about"
                        style="@style/Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_person_24"
                        android:text="About"
                        app:icon="@drawable/icon_info_24" />

                </TableRow>

                <!-- Second row -->
                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    >

                    <Button
                        android:id="@+id/profile"
                        style="@style/Button"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="5dp"
                        android:layout_weight="1"
                        android:drawableStart="@drawable/icon_info_24"
                        android:text="Profile"
                        app:icon="@drawable/icon_person_24" />

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="5dp"
                        />




                </TableRow>

            </TableLayout>

        </androidx.cardview.widget.CardView>

</LinearLayout>